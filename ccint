#!/bin/sh

start_path="$(pwd)"
script="$1"
if ! [ -f "${script}" ]; then
    echo "\"${script}\" - file not found" >&2
    exit 1
fi
shift
base="$(basename "${script}" .cc)"

if [ -d "/dev/shm" ]; then
    # prefer memory
    temp="$(mktemp -p /dev/shm -d)"
else
    temp="$(mktemp -d)"
fi

if which "clang++" >/dev/null 2>&1; then
    # prefer clang
    CXX="clang++"
fi

if [ "${CXXFLAGS}" = "" ]; then
    CXXFLAGS="-pipe -O3 -pedantic -Wall -Wextra"
fi

if [ "${LDFLAGS}" = "" ]; then
    # link glibc
    LDFLAGS="-lm -lrt -lpthread"
fi

printf "+ ${CXX} ${CXXFLAGS} ${LDFLAGS} -o \"${temp}/${base}\" \"${script}\"\n"
if ! ${CXX} ${CXXFLAGS} ${LDFLAGS} -o "${temp}/${base}" "${script}"; then
    rm -r "${temp}"
    exit 1
fi

(cd "${temp}" && "./${base}" "$@")

rm -r "${temp}"
