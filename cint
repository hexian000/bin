#!/bin/sh

script="$1"
if ! [ -f "${script}" ]; then
	echo "\"${script}\" - file not found" >&2
	exit 1
fi
shift
base="$(basename "${script}" .c)"

if [ -d "/dev/shm" ]; then
	# prefer memory
	temp="$(mktemp -p /dev/shm -d)"
else
	temp="$(mktemp -d)"
fi

if which "clang" >/dev/null 2>&1; then
    # prefer clang
    CC="clang"
fi

if [ "${CFLAGS}" = "" ]; then
	CFLAGS="-pipe -pedantic -Wall -Wextra -Werror -O3"
fi

if [ "${LDFLAGS}" = "" ]; then
	# try link common libs
	LDFLAGS="-lm -lrt -lpthread -ldl"
fi

# printf "+ ${CC} ${CFLAGS} -o \"${temp}/${base}\" \"${script}\" ${LDFLAGS}\n"
if ! ${CC} ${CFLAGS} -o "${temp}/${base}" "${script}" ${LDFLAGS}; then
	rm -r "${temp}"
	exit 1
fi

(cd "${temp}" && "./${base}" "$@")

rm -r "${temp}"
