#!/bin/sh -e

if [ "$(id -u)" != "0" ]; then
    if [ -n "$(which sudo)" ]; then
        echo "\$ sudo $0 $*"
        sudo "$0" "$@"
        exit $?
    else
        echo "\$ su -c \"$0 $*\" root"
        su -c "$0 $*" root
        exit $?
    fi
fi

if [ -t 1 ] && command -v tput >/dev/null && [ "$(tput colors)" -ge 16 ] 2>/dev/null; then
    RED="$(tput setaf 9)"
    GREEN="$(tput setaf 10)"
    YELLOW="$(tput setaf 11)"
    BLUE="$(tput setaf 12)"
    MAGENTA="$(tput setaf 13)"
    CYAN="$(tput setaf 14)"
    RESET="$(tput sgr0)"
fi

run() {
    echo "${CYAN}+ $@${RESET}"
    "$@"
}

maintenance_apt() {
    export DEBIAN_FRONTEND=noninteractive
    if [ -n "${CHECKUPDATE}" ]; then
        run apt update
        run apt list --upgradable
        return
    fi

    run apt update
    run apt install -f -y
    run apt dist-upgrade -y
    run apt autoremove -y
    run apt clean
    dpkg -l | grep ^rc | awk '{print $2}' |
        while read packagename; do
            run dpkg --purge "$packagename"
        done
}

maintenance_snap() {
    if [ -n "${CHECKUPDATE}" ]; then
        return
    fi

    run snap refresh

    LANG="C" snap list --all | awk '/disabled/{print $1, $3}' |
        while read snapname revision; do
            run snap remove "$snapname" --revision="$revision"
        done
}

maintenance_yum() {
    if [ -n "${CHECKUPDATE}" ]; then
        return
    fi

    run yum upgrade
}

maintenance_pacman() {
    if [ -n "${CHECKUPDATE}" ]; then
        return
    fi

    run pacman -Syu
}

while [ $# -gt 0 ]; do
    case "$1" in
    "") ;;
    "-c" | "--check-update")
        CHECKUPDATE=1
        ;;
    *)
        echo "${RED}Unknown option: $1${RESET}"
        exit 1
        ;;
    esac
    shift
done

if command -v apt >/dev/null; then
    maintenance_apt
fi

if command -v snap >/dev/null && pkill -0 snapd; then
    maintenance_snap
fi

if command -v yum >/dev/null; then
    maintenance_yum
fi

if command -v pacman >/dev/null; then
    maintenance_pacman
fi
